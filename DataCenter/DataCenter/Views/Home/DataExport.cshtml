
@{
    ViewBag.Title = "DataExport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="height:40px"></div>

<!--Ejemplo tabla con DataTables-->
<div class="container" style=" padding-left: 50px;">
    <div class="row targetas datefilter">
        <div class="row col-lg-6">
            <h5 style="margin-inline:10px">Fecha inicio:</h5>
            <input id="dateInicio" type="date" style="margin-inline:2px" />
            <input id="TimeInicio" type="time" style="margin-inline:2px" />
        </div>
        <div class="row col-lg-6">
            <h5 style="margin-inline:10px">Fecha fin:</h5>
            <input id="dateFin" type="date" style="margin-inline:2px" />
            <input id="TimeFin" type="time" style="margin-inline:2px" />
        </div>
        <div class="row col-lg-12">
            <button class="btn btn-success" id="Aceptar" onclick="RecargarTabla()" style="margin-inline:5px" >Aceptar</button>
        </div>

    </div>
    <div class="row">
        <div class="table-responsive">
            <table id="example" class="table table-striped table-bordered table-responsive" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Codigo Entrada Dato</th>
                        <th>Codigo Nodo</th>
                        <th>Velocidad</th>
                        <th>SNR</th>
                        <th>Hora Entrada</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<link rel=StyleSheet href="~/Content/StylesDashboard.css" type="text/css">
<style type="text/css">

    /*estilos para la tabla*/
    table th {
        background-color: #337ab7 !important;
        color: white;
    }

    table > tbody > tr > td {
        vertical-align: middle !important;
    }

    /*para alinear los botones y cuadro de busqueda*/
    .btn-group, .btn-group-vertical {
        position: absolute !important;
    }

    .datefilter {
        padding: 15px;
        border: 1px solid #e7e7e7;
        border-radius: 20px;
        background-color: #f8f8f8;
    }
</style>

<script src="~/Scripts/ScriptDataExport.js"></script>
<script type="text/javascript">
    $(document).ready(CargarDatosTabla());

</script>
